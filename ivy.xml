<ivy-module version="2.0">
  <info organisation="admc.com" module="jcreole"/>
  <configurations>
    <conf name="baseconf" visibility="private"
          description="Dependencies which hold for all normal confs"/>
    <conf name="build" description="Dependencies for compiling"
          extends="baseconf" visibility="private"/>
    <conf name="run" description="Dependencies for running w/ Beaver"
          extends="baseconf" visibility="private"/>
    <conf name="jflex" description="Dependencies for running JFlex Generator"
          visibility="private"/>
    <conf name="beaver" description="Dependencies for running Beaver Generator"
          visibility="private"/>
    <conf name="test" description="Dependencies for Unit Testing"
          visibility="private" extends="run" />
  </configurations>
  <dependencies defaultconfmapping="baseconf->default">
    <dependency org="commons-logging" name="commons-logging" rev="1.1.1"
                transitive="false"/>
    <dependency org="commons-io" name="commons-io" rev="2.0.1"
                transitive="false"/>
    <dependency org="commons-lang" name="commons-lang" rev="2.6"
                transitive="false"/>
    <dependency org="de.jflex" name="jflex" rev="1.4.3"
                transitive="false" conf="jflex->default"/>
    <dependency org="beaver" name="beaver" rev="0.9.7" transitive="false"
                conf="beaver->default">
      <artifact name="beaver" type="jar"
                url="${beaverlib.url}/beaver-0.9.7.jar"/> 
    </dependency>
    <dependency org="beaver" name="beaver-rt" rev="0.9.7" transitive="false"
                conf="run,build->default">
      <artifact name="beaver-rt" type="jar"
                url="${beaverlib.url}/beaver-rt-0.9.7.jar"/> 
    </dependency>
    <dependency org="junit" name="junit" rev="4.8.2"
                transitive="false" conf="test->default"/>
  </dependencies>
</ivy-module>
